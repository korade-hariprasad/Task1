<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task1" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.Task1" parent="Base.Theme.Task1" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTextViewHeadingStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="MyTextViewHeadingStyle2">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="MyTextViewSubHeadingStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">30</item>
    </style>

    <style name="MyTextViewLinkStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="MyEditTextEmailStyle">
        <item name="android:hint">Email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawableRight">@drawable/user</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="MyEditTextContainerStyle">
        <item name="android:layout_margin">10sp</item>
        <item name="android:background">@drawable/edittext_container_bg</item>
    </style>

    <style name="MyEditTextPasswordStyle">
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="MyFloatButtonStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/btn_float_bg</item>
        <item name="android:layout_margin">20sp</item>
    </style>

    <style name="MyEditTextOtpStyle">
        <item name="android:hint">_</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">8sp</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/edittext_otp_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bounce_in</item>
        <item name="android:windowExitAnimation">@anim/bounce_out</item>
    </style>

    <style name="MyHorizontalViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>